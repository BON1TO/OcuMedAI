<% layout("layouts/boilerplate_auth") %>
<% authPage = "register-page" %>


<div class="register-container">

    <!-- REGISTER PANEL (important wrapper!) -->
    <div class="register-panel">

        <h1 class="register-title">Create Account</h1>
        <p class="register-sub">Join NeuroSight and begin your health journey.</p>

        <form action="/register" method="POST" class="register-form">

            <div class="field">
                <label for="username">Username</label>
                <input id="username" name="username" required>
            </div>

            <div class="field">
  <label for="name">Full Name</label>
  <input id="name" name="name" required>
</div>


            <div class="field">
                <label for="email">Email</label>
                <input id="email" name="email" type="email" required>
            </div>

            <div class="field">
                <label for="password">Password</label>
                <input id="password" name="password" type="password" required>
            </div>

            <button class="register-btn">Create Account</button>
        </form>

        <p class="register-login">
            Already have an account? <a href="/login">Sign in</a>
        </p>

    </div> <!-- END register-panel -->

</div> <!-- END register-container -->
