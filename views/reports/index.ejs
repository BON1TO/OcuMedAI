<% pageTitle = "Reports" %>
<% layout('layouts/boilerplate') %>

<h1 class="gradient-title">Your Reports</h1>

<div class="reports-grid">
  <% reports.forEach(r => { %>
    <div class="report-card">
      <img src="<%= r.imageUrl %>" class="report-thumb">
      <div class="report-info">
        <h3><%= r.diabeticRetinopathyLevel %></h3>
        <p>Age <%= r.age %> â€¢ BMI <%= r.BMI %></p>
        <a href="/reports/<%= r._id %>" class="report-btn">View Report</a>
      </div>
    </div>
  <% }) %>
</div>
