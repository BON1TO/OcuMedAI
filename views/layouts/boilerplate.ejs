<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />

  <title><%= typeof title !== 'undefined' ? title + ' | NeuroSight' : 'NeuroSight' %></title>

  <!-- Modern clean font -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">

  <link rel="stylesheet" href="/css/styles.css" />
</head>

<body class="theme-root theme-dark" style="font-family: 'Inter', sans-serif;">

  <!-- FIXED LEFT SIDEBAR -->
  <aside id="sidebar" class="sidebar" aria-label="Main navigation">
    
    <div class="sidebar-top">
      <a class="brand" href="/home" title="NeuroSight">
        <div class="logo-area">
  <img src="/images/icon.png" class="logo-img" alt="NeuroSight Logo">
</div>



        <div class="brand-text">NEURO SIGHT</div>
      </a>
    </div>

    <nav class="nav" role="navigation">

  <a class="nav-item <%= currentPath === '/users/dashboard' ? 'active' : '' %>" 
     href="/users/dashboard">
    <span class="label">Dashboard</span>
  </a>

  <a class="nav-item <%= currentPath.startsWith('/reports') ? 'active' : '' %>" 
     href="/reports">
    <span class="label">Reports</span>
  </a>

  <a class="nav-item <%= currentPath.startsWith('/calendar') ? 'active' : '' %>" 
     href="/calendar">
    <span class="label">Calendar</span>
  </a>

  <a class="nav-item <%= currentPath.startsWith('/checkup') ? 'active' : '' %>" 
     href="/checkup">
    <span class="label">Checkup</span>
  </a>

  <a class="nav-item <%= currentPath.startsWith('/settings') ? 'active' : '' %>" 
     href="/settings">
    <span class="label">Settings</span>
  </a>

</nav>


    <div class="sidebar-bottom">
      <a href="/logout" class="logout-btn">Logout</a>
    </div>

  </aside>


  <!-- MAIN PAGE -->
  <div class="page">



    <!-- TOPBAR -->
<header class="topbar">

  <% if (!currentUser) { %>
    <!-- Guest view: Login / Register -->
    <div></div> <!-- empty left space -->

    <div class="top-right">
      <a href="/login" class="toplink">Login</a>
      <a href="/register" class="toplink">Register</a>
    </div>

  <% } else { %>
    <!-- Logged-in view: Normal dashboard topbar -->
    <% pageTitle = (typeof pageTitle !== "undefined") ? pageTitle : ""; %>

<h1 class="page-title">
  <%= pageTitle %>
</h1>



    <div class="top-right">
      

      <div class="profile">
        <div class="avatar">
          <%= currentUser.username[0].toUpperCase() %>
        </div>
      </div>
    </div>
  <% } %>

</header>


    <!-- MAIN CONTENT -->
    <main id="main" class="main-content">
      <%- body %>
    </main>

    <!-- FOOTER -->
    <footer class="footer">
      Â© <%= new Date().getFullYear() %> NeuroSight
    </footer>

  </div>


  <!-- JS FILES -->
  <script src="/js/theme.js"></script>
  <script src="/js/dashboard.js"></script>
  <!-- Global particle layer -->
<div id="particle-layer"></div>
<script src="/js/particles.js"></script>


</body>
</html>
