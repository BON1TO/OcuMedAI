<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />

  <title><%= typeof title !== 'undefined' ? title + ' | OcuMedAI' : 'OcuMedAI' %></title>

  <!-- Font -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">

  <!-- ✅ CRITICAL: Theme loader BEFORE CSS -->
  <script>
    (function () {
      const KEY = "neuro_theme";
      let theme = localStorage.getItem(KEY);

      if (theme !== "light" && theme !== "dark") {
        theme = "light";
        localStorage.setItem(KEY, "light");
      }

      document.documentElement.classList.add("theme-" + theme);
    })();
  </script>

  <link rel="stylesheet" href="/css/styles.css" />
</head>


<body class="theme-root" style="font-family: 'Inter', sans-serif;">


  <!-- FIXED LEFT SIDEBAR -->
  <aside id="sidebar" class="sidebar" aria-label="Main navigation">
    
    <div class="sidebar-top">
      <a class="brand" href="/home" title="OcuMedAI">
        <div class="logo-area">
          <img src="/images/icon.png" class="logo-img" alt="OcuMedAI Logo">
        </div>
        <div class="brand-text">OcuMedAI</div>
      </a>
    </div>

    <nav class="nav" role="navigation">

      <a class="nav-item <%= currentPath === '/users/dashboard' ? 'active' : '' %>" 
         href="/users/dashboard">
        <span class="label">Dashboard</span>
      </a>

      <a class="nav-item <%= currentPath.startsWith('/reports') ? 'active' : '' %>" 
         href="/reports">
        <span class="label">Reports</span>
      </a>

      <a class="nav-item <%= currentPath.startsWith('/checkup') ? 'active' : '' %>" 
         href="/checkup">
        <span class="label">Checkup</span>
      </a>

      <a class="nav-item <%= currentPath.startsWith('/settings') ? 'active' : '' %>" 
         href="/settings">
        <span class="label">Settings</span>
      </a>

    </nav>

    <div class="sidebar-bottom">
      <a href="/logout" class="logout-btn">Logout</a>
    </div>
  </aside>

  <!-- MAIN PAGE -->
  <div class="page">

    <!-- TOPBAR -->
    <header class="topbar">

      <% if (!currentUser) { %>
        <!-- GUEST VIEW -->
        <div></div>

        <div class="top-right">
          <!-- THEME TOGGLE (VISIBLE TO GUESTS) -->
          <button id="themeBtn" class="theme-toggle" aria-label="Toggle theme">
            <span id="themeIcon">☀️</span>
          </button>

          <a href="/login" class="toplink">Login</a>
          <a href="/register" class="toplink">Register</a>
        </div>

      <% } else { %>
        <!-- LOGGED-IN VIEW -->
        <% pageTitle = (typeof pageTitle !== "undefined") ? pageTitle : ""; %>

        <h1 class="page-title"><%= pageTitle %></h1>

        <div class="top-right">
          <!-- THEME TOGGLE (BESIDE AVATAR) -->
          <button id="themeBtn" class="theme-toggle" aria-label="Toggle theme">
            <span id="themeIcon">☀️</span>
          </button>

          <div class="profile">
            <div class="avatar">
              <%= currentUser.username[0].toUpperCase() %>
            </div>
          </div>
        </div>

      <% } %>

    </header>

    <!-- MAIN CONTENT -->
    <main id="main" class="main-content">
      <%- body %>
    </main>

    <!-- FOOTER -->
    <footer class="footer">
      © <%= new Date().getFullYear() %> OcuMedAI
    </footer>

  </div>

  <!-- JS FILES -->
  <script src="/js/theme.js"></script>
  <script src="/js/dashboard.js"></script>

  <!-- Global particle layer -->
  <div id="particle-layer"></div>
  <script src="/js/particles.js"></script>

</body>
</html>
